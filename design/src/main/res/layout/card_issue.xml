<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <View
        android:id="@+id/indexStatus"
        android:layout_width="7dp"
        android:layout_height="0dp"
        android:background="@color/violet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icAuthorAvatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/indexStatus"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/lightMediumGrey" />

    <TextView
        android:id="@+id/lblIssueAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/manrope_medium"
        android:textColor="@color/lightMediumGrey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/icAuthorAvatar"
        app:layout_constraintStart_toEndOf="@id/icAuthorAvatar"
        app:layout_constraintTop_toTopOf="@id/icAuthorAvatar"
        tools:text="mbiamont" />

    <TextView
        android:id="@+id/lblIssueTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/manrope_medium"
        android:textColor="@color/lightMediumGrey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/indexStatus"
        app:layout_constraintTop_toBottomOf="@id/icAuthorAvatar"
        tools:text="BBlfdsfjsdfodsjfiosdjfoijsgoisjgoisjgoisdjgiosgjosjgsroijgoigjroigriogjriogjirjgeorijgerio" />

    <TextView
        android:id="@+id/lblIssueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/manrope_medium"
        android:textColor="@color/lightMediumGrey"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/indexStatus"
        app:layout_constraintTop_toBottomOf="@id/lblIssueTitle"
        tools:text="30/06/1991" />

    <TextView
        android:id="@+id/lblIssuesCommentsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/manrope_medium"
        android:textColor="@color/lightMediumGrey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblIssueTitle"
        tools:text="6000" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_comment_alt"
        android:layout_marginEnd="10dp"
        android:tint="@color/lightMediumGrey"
        app:layout_constraintBottom_toBottomOf="@id/lblIssuesCommentsCount"
        app:layout_constraintEnd_toStartOf="@id/lblIssuesCommentsCount"
        app:layout_constraintTop_toTopOf="@id/lblIssuesCommentsCount" />

</merge>