<resources>

    <style name="Theme.App" parent="Theme.App.Base" />

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorBackground">@color/darkViolet</item>
        <item name="android:textColor">@color/lightMediumGrey</item>
        <item name="android:textColorPrimary">@color/lightGrey</item>
        <item name="android:fontFamily">@font/manrope_regular</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/darkGrey</item>

        <item name="android:statusBarColor">@color/darkGrey</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- remove animations between activities -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
