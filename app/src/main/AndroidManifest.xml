<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mbiamont.github">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GithubApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.App">

        <activity
            android:name="com.mbiamont.github.splashscreen.SplashActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mbiamont.github.login.LoginActivity"
            android:label="@string/app_name"/>

        <activity
            android:name="com.mbiamont.github.main.MainActivity"
            android:label="@string/app_name"/>

    </application>

</manifest>